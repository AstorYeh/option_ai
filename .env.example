# FinMind API 設定
# 註冊網址: https://finmindtrade.com/
FINMIND_API_TOKEN=your_finmind_token_here

# Discord Webhook 設定
# 取得方式: Discord 伺服器設定 > 整合 > Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# Ollama API 設定
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b

# 資料庫設定
DATABASE_PATH=data/database/options.db

# 日誌設定
LOG_LEVEL=INFO
LOG_DIR=logs

# 模型設定
MODEL_DIR=models
RETRAIN_INTERVAL_DAYS=7

# 回測設定
BACKTEST_START_DATE=2022-01-01
BACKTEST_END_DATE=2024-12-31
INITIAL_CAPITAL=1000000

# 風險管理
MAX_POSITION_SIZE=2
STOP_LOSS_PERCENT=50
TAKE_PROFIT_PERCENT=100

# 通知設定
ENABLE_DISCORD_NOTIFY=true
NOTIFY_ON_SIGNAL=true
NOTIFY_ON_ERROR=true
DAILY_REPORT_TIME=17:00

# 排程設定
DATA_UPDATE_TIME=15:30
PREDICTION_TIME=16:00
